function checkov_next() {
  MOST_RECENT=$(
    find contrib/checkov/terraform/checks -type f -name '*.py' |\
      xargs -I {} sh -c "cat {} | grep CKV" |\
      sort -V |\
      awk '{print $3}' |\
      jq -r . |\
      tail -n 1
  )

  NUMBER=${MOST_RECENT##*_}
  INCREMENT=$((NUMBER++))
  echo "CKV_NVTA_${INCREMENT}"

}

