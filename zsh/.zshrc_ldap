ldap_membership() {
  ldapsearch \
    -o ldif-wrap=no \
    -H "ldaps://${DOMAIN_CONTROLLER}:636" \
    -D "${DOMAIN_DN}" \
    -w "${DOMAIN_PASSWORD}" \
    -b "${DOMAIN_ROOT}" "(&(cn=*)(sAMAccountName=$1))" 'memberOf' | \
  grep 'memberOf' | \
  awk '{print $2}'
}

function ldap_group() {
  ldapsearch \
    -o ldif-wrap=no \
    -H "ldaps://${DOMAIN_CONTROLLER}:636" \
    -D "${DOMAIN_DN}" \
    -w "${DOMAIN_PASSWORD}" \
    -b "${DOMAIN_ROOT}" "(&(cn=$1))" 'member' | \
  grep -v 'requesting:' | \
  grep 'member' | \
  cut -d " " -f2-
}

ldap_profile() {
  ldapsearch \
    -o ldif-wrap=no \
    -H "ldaps://${DOMAIN_CONTROLLER}:636" \
    -D "${DOMAIN_DN}" \
    -w "${DOMAIN_PASSWORD}" \
    -b "${DOMAIN_ROOT}" "(&(cn=*)(sAMAccountName=$1))" | \
  sed -n '/# requesting:/,/# search reference/p' |\
  grep -v '# search'
}

ldap_id() {
  ldapsearch \
    -o ldif-wrap=no \
    -H "ldaps://${DOMAIN_CONTROLLER}:636" \
    -D "${DOMAIN_DN}" \
    -w "${DOMAIN_PASSWORD}" \
    -b "${DOMAIN_ROOT}" "(&(cn=*)(sAMAccountName=$1))" 'mail' 'sAMAccountName' 'name' | \
  grep -E 'mail|sAMAccountName|name'
}

ldap_email() {
  ldapsearch \
    -o ldif-wrap=no \
    -H "ldaps://${DOMAIN_CONTROLLER}:636" \
    -D "${DOMAIN_DN}" \
    -w "${DOMAIN_PASSWORD}" \
    -b "${DOMAIN_ROOT}" "(&(cn=*)(mail=$1))" 'mail' 'sAMAccountName' 'name' | \
  grep -E 'mail|sAMAccountName|name'
}

ldap_public_key() {
  ldapsearch \
    -o ldif-wrap=no \
    -H ldaps://${DOMAIN_CONTROLLER}:636 \
    -D "${DOMAIN_DN}" \
    -w "${DOMAIN_PASSWORD}" \
    -b "${DOMAIN_ROOT}" "(&(cn=*)(sAMAccountName=$1))" 'sshPublicKey' | \
  grep -v 'requesting:' | \
  grep 'sshPublicKey' | \
  cut -d " " -f2-
}

